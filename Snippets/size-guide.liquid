  <div class="size-guide-box step-1">
    <button class="close-size-guide" aria-label="Close">&times;</button>

    <!-- Step 1: Gender -->
    <div class="size-guide-step step-1 active">
      <p class="step-label">STEP 1 OF 4</p>
      <h2 class="step-title">What is your dog’s <strong>gender?</strong></h2>
      <div class="option-group">
        <button class="option-button" data-value="male">♂ MALE</button>
        <button class="option-button" data-value="female">♀ FEMALE</button>
      </div>
      <button class="next-button" data-next>NEXT
