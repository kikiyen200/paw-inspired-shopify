    <!-- Step 2: Weight -->
    <div class="size-guide-step step-2">
      <p class="step-label">STEP 2 OF 4</p>
      <h2 class="step-title">What is your dog’s <strong>weight?</strong></h2>
      
     <div class="option-row">
      <div class="option-row step2-option-group">
        <button class="option-button" data-value="<3">&lt; 3 KG / 6.6 lb</button>
        <button class="option-button" data-value="3-6">3–6 KG / 6.6–13.2 lbs</button>
        <button class="option-button" data-value="6-10">6–10 KG / 13.2–22 lbs</button>
      </div>
    </div>
  <div class="option-row">
      <div class="option-row step2-option-group">
        <button class="option-button" data-value="10-14">10–14 KG / 22–30.9 lbs</button>
        <button class="option-button" data-value="14-23">14–23 KG / 30.9–50.7 lbs</button>
        <button class="option-button" data-value="23-30">23–30 KG / 50.7–66.1 lbs</button>
        <button class="option-button" data-value=">30">&gt; 30 KG / 66.1+ lbs</button>
       </div>
    </div>
      
