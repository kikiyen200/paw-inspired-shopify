{{ 'reviews-carousel.css' | asset_url | stylesheet_tag }}

<section class="reviews-carousel-section">
  <h2 class="rc-heading">SHARE YOUR PAW INSPIRED MOMENTS!</h2>
  <p class="rc-subheading">
    Tag <strong style="color:#000;">@PawInspired</strong>
    +
    <strong style="color:#000;">#PawInspiredPets</strong> on Instagram
  </p>
  <a href="/pages/paw-inspired-social-media-photo-promotion" class="button">
    Be Featured Next!
  </a>

  <div class="reviews-carousel">
    <!-- Previous Button -->
    <button type="button" class="rc-arrow prev" aria-label="Previous slide">
  <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 30 30" fill="none">
    <path d="M6 4L10 8L6 12" stroke="#00B4ED" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
</button>
    <div class="rc-track">
      {% for block in section.blocks %}
        <div class="rc-slide">
          <div class="rc-inner">
            <video class="rc-video" muted loop playsinline preload="metadata">
              <source src="{{ block.settings.video_url }}" type="video/mp4" />
            </video>
            <div class="rc-card">
              <img class="rc-thumb" 
                  src="{{ block.settings.product_image | img_url: '400x' }}"
                  alt="{{ block.settings.product_title }}"
                />
              <a href="{{ block.settings.product_link }}">
                <div class="rc-info">
                  <div class="rc-title">{{ block.settings.product_title | strip_html }}</div>
                  <div class="rc-price">{{ block.settings.product_price | strip_html }}</div>
                </div>
              </a>
               <a href="/products/furr-o" class="btn">
                <button class="add-to-cart" aria-label="Add to cart">
          {% render 'icon-bag' %}
        </button>
      </a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div><!-- /.rc-track -->
      <!-- Next Button -->
       <button type="button" class="rc-arrow next" aria-label="Next slide">
  <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 30 30" fill="none">
    <path d="M6 4L10 8L6 12" stroke="#00B4ED" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
</button>
  </div>
</section>

<script src="{{ 'reviews-carousel.js' | asset_url }}" defer></script>

      
{% schema %}
{
  "name": "Reviews Carousel",
  "max_blocks": 10,
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Video Slide",
      "settings": [
        {
          "id": "video_url",
          "type": "text",
          "label": "Video Link (MP4)"
        },
        {
          "id": "product_image",
          "type": "image_picker",
          "label": "Product Cover"
        },
        {
          "id": "product_link",
          "type": "url",
          "label": "Product Page"
        },
        {
          "id": "product_title",
          "type": "text",
          "label": "Product Title"
        },
        {
          "id": "product_price",
          "type": "text",
          "label": "Product Price"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews Carousel",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" },
        { "type": "slide" },
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}