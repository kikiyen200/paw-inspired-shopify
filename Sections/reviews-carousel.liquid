
{{ 'reviews-carousel.css' | asset_url | stylesheet_tag }}

<section class="reviews-carousel-section">
  <h2 class="rc-heading">SHARE YOUR PET'S BEST MOMENTS!</h2>
  <p class="rc-subheading">
    Tag <strong style="color:#00b4ed;">@pawInspired</strong>
    +
    <strong style="color:#00b4ed;">#PawInspiredPets</strong><br>
    on Instagram
  </p>
  <a href="/pages/paw-inspired-social-media-photo-promotion" class="button">
    Be Featured Next!
  </a>

  <div class="reviews-carousel">
    <button type="button" class="rc-arrow prev" aria-label="Previous slide">
      <svg class="rc-arrow prev" xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 30 30" fill="none">
      <path d="M6 4L10 8L6 12" stroke="#00B4ED" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
         </button>
    <div class="rc-track">
      {% for block in section.blocks %}
        <div class="rc-slide">
          <div class="rc-inner">
            <video class="rc-video" muted loop playsinline preload="metadata">
              <source src="{{ block.settings.video_url }}" type="video/mp4" />
            </video>
            <div class="rc-card">
              <a href="{{ block.settings.product_link }}">
                <img
                  src="{{ block.settings.product_image | img_url: '400x' }}"
                  alt="{{ block.settings.product_title }}"
                />
                <div class="rc-info">
                  <div class="rc-title">{{ block.settings.product_title }}</div>
                  <div class="rc-price">{{ block.settings.product_price }}</div>
                </div>
              </a>
               <a href="/products/furr-o" class="btn">
                <button class="add-to-cart" aria-label="Add to cart">
          {% render 'icon-bag' %}
        </button>
      </a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div><!-- /.rc-track -->
        <button type="button" class="rc-arrow next" aria-label="Next slide">
          <svg class="rc-arrow next" xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 30 30" fill="none">
      <path d="M6 4L10 8L6 12" stroke="#00B4ED" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg
            </button>
  </div>
</section>

{% schema %}
{
  "name": "Reviews Carousel",
  "max_blocks": 10,
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "影片 Slide",
      "settings": [
        {
          "id": "video_url",
          "type": "text",
          "label": "影片網址 (MP4)"
        },
        {
          "id": "product_image",
          "type": "image_picker",
          "label": "商品封面圖"
        },
        {
          "id": "product_link",
          "type": "url",
          "label": "商品連結"
        },
        {
          "id": "product_title",
          "type": "text",
          "label": "商品名稱"
        },
        {
          "id": "product_price",
          "type": "text",
          "label": "商品價格"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews Carousel",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" },
        { "type": "slide" },
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}

