{% stylesheet %}
@import url("/assets/category.css");
{% endstylesheet %}

<section class="category-section">
  <div class="category-header">
    <h2 class="category-heading">{{ section.settings.heading }}</h2>
    <p class="category-subheading">{{ section.settings.subheading }}</p>
    <div class="category-see-all">
      {% render 'see-all', link: section.settings.see_all_link, text: 'See All' %}
    </div>
  </div>
  <div class="category-grid">
    <!--For Dog  -->
    <div class="category-card">
     <div class="category-image-hover">
  <div class="image-wrapper">
    <a id="dog-category-link" href="/collections/dog-products">
    <img
      id="dog-category-image"
      class="image-default"
      src="https://cdn.shopify.com/s/files/1/0611/7992/0584/files/dog-paw-pawinspired.jpg?v=1744794386"
      alt="Dog Paw"
      loading="lazy" />
    <img class="image-hover" src="https://cdn.shopify.com/s/files/1/0611/7992/0584/files/we-connect-hand-and-paw-pawinspired.jpg?v=1745225176" alt="Symbol of connection and trust between humans and pets – Paw Inspired®" />
    <div class="dark-overlay"></div>
  </div>
  <a href="/collections/dog-products" class="image-link-cover"></a>
   </div>
      <div class="category-content">
        <h3 class="category-title">DOG</h3>
        <p class="category-subtitle">
         <span class="desktop-only">Small / Medium / Large Breeds</span>
        <span class="mobile-only">Small<br>Medium<br>Large Breeds</span>
          </p>
        <div class="category-tags">
          <span class="category-tag" data-type="dog" data-tag="Disposable Diaper">Disposable Diaper</span>
          <!-- <span class="category-tag" data-type="dog" data-tag="Washable Diaper">Washable Diaper</span> -->
          <!-- <span class="category-tag" data-type="dog" data-tag="Disposable Pad">Disposable Pad</span> -->
          <span class="category-tag" data-type="dog" data-tag="Washable Pad">Washable Pad</span>
          <span class="category-tag" data-type="dog" data-tag="Crate Mat">Crate Mat</span>
          <!-- <span class="category-tag" data-type="dog" data-tag="Playpen Mat">Playpen Mat</span> -->
        </div>
      </div>
    </div>

    <!--For Cat  -->
    <div class="category-card">
      <div class="category-image-hover">
  <div class="image-wrapper">
    <a id="cat-category-link" href="/collections/dog-products">
     <img
      id="cat-category-image"
      class="image-default"
      src="https://cdn.shopify.com/s/files/1/0611/7992/0584/files/cat-paw-pawinspired.jpg?v=1744794386"
      alt="Cute cat paw for pet product by Paw Inspired"
      loading="lazy" />
      <img class="image-hover" src="https://cdn.shopify.com/s/files/1/0611/7992/0584/files/we-connect-hand-and-paw-pawinspired-cat2.jpg?v=1747729069" alt="Symbol of connection and trust between humans and pets – Paw Inspired®" />
    <div class="dark-overlay"></div>
  </div>
  <a href="/collections/cat-products" class="image-link-cover"></a>
      </div>
      <div class="category-content">
        <h3 class="category-title">CAT</h3>
         <p class="category-subtitle">
         <span class="desktop-only">Kitten / Adult / Senior</span>
        <span class="mobile-only">Kitten<br>Adult<br>Senior</span>
          </p>
        <div class="category-tags">
          <span class="category-tag" data-type="cat" data-tag="Disposable Pads">Disposable Pads</span>
          <!-- <span class="category-tag" data-type="cat" data-tag="Washable Pads">Washable Pads</span> -->
          <!-- <span class="category-tag" data-type="cat" data-tag="Playpen Mats">Playpen Mats</span> -->
          <span class="category-tag" data-type="cat" data-tag="Cleaning Spray">Cleaning Spray</span>
          <!-- <span class="category-tag" data-type="cat" data-tag="Snuggle Pet Bed">Snuggle Pet Bed</span> -->
        </div>
      </div>
    </div>

    <!--For Small Pet  -->
    <div class="category-card">
      <div class="category-image-hover">
  <div class="image-wrapper">
    <a id="small-pet-category-link" href="/collections/small-animal-products">
     <img
      id="small-pet-category-image"
      class="image-default"
      src="https://cdn.shopify.com/s/files/1/0611/7992/0584/files/guinea-pig-paw-pawinspired.jpg?v=1744794386"
      alt="Small animal paw guinea pig or rabbit foot by Paw Inspired"
      loading="lazy" />
    <img class="image-hover" src="https://cdn.shopify.com/s/files/1/0611/7992/0584/files/we-connect-hand-and-paw-pawinspired-guinea-pig2.jpg?v=1747732303" alt="Symbol of connection and trust between humans and pets – Paw Inspired®" />
    <div class="dark-overlay"></div>
  </div>
  <a href="/collections/small-animal-products" class="image-link-cover"></a>
      </div>
      <div class="category-content">
        <h3 class="category-title">SMALL PET</h3>
        <p class="category-subtitle">
         <span class="desktop-only">Guinea Pig / Rabbit / Ferret</span>
        <span class="mobile-only">Guinea Pig<br>Rabbit<br>Ferret</span>
          </p>
        <div class="category-tags">
          <span class="category-tag" data-type="small pet" data-tag="Liners">Liners</span>
          <!-- <span class="category-tag" data-type="small pet" data-tag="Disposable Cage Liners">Disposable Cage Liners</span>
          <span class="category-tag" data-type="small pet" data-tag="Washable Cage Liners">Washable Cage Liners</span> -->
          <span class="category-tag" data-type="small pet" data-tag="Hammock">Hammock</span>
          <!-- <span class="category-tag" data-type="small pet" data-tag="toilet">Toilet</span> -->
          <!-- <span class="category-tag"data-type="small pet" data-tag="Chinchilla Cuddler">Chinchilla Cuddler</span> -->
          <span class="category-tag" data-type="small pet" data-tag="Snuggle Bunny®">Snuggle Bunny®</span>
         <!-- <span class="category-tag"data-type="small pet" data-tag="Playpen Mats">Playpen Mats</span> -->
          <span class="category-tag"data-type="small pet" data-tag="Furr-O®">Furr-O®</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.paw-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url("https://cdn.shopify.com/s/files/1/0611/7992/0584/files/we-connect-hand-and-paw-pawinspired.jpg?v=1745225176");
  background-size: cover;
  background-position: center;
  opacity: 0;
  transition: opacity 0.4s ease;
  z-index: 2;
  border-radius: 0.5rem;
}

.category-image-hover {
  position: relative;
  width: 100%;
  height: auto;
  z-index: 1;
}

.category-image-hover:hover #dog-hover-image {
  opacity: 0;
}

.category-image-hover:hover .paw-overlay {
  opacity: 1;
}
</style>

{% schema %}
{
  "name": "Category",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "標題",
      "default": "SHOP BY PET TYPE"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "副標",
      "default": "Find essentials curated for your furry, feathery, or tiny friend."
    },
    {
      "type": "url",
      "id": "see_all_link",
      "label": "See All 連結",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Category"
    }
  ]
}
{% endschema %}
