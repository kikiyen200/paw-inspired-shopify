{% schema %}
{
  "name": "Custom Header",
  "class": "section-header",
  "settings": [
    {
      "type": "color",
      "id": "header_background",
      "label": "Header Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "hover_color",
      "label": "Hover Color",
      "default": "#ff6b6b"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    }
  ],
  "presets": [
    {
      "name": "Custom Header"
    }
  ]
}
{% endschema %}

<div id="customHeaderWrapper" class="custom-header hidden">
  <header class="header">
    <div class="header-inner">
      {% render 'header-drawer', 
         header_type: 'custom-header',
         main_menu: settings.menu 
      %}
    </div>
  </header>
</div>

<style>
  .custom-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 9999;
    display: none;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  body.show-header .custom-header {
    display: block;
    opacity: 1;
    pointer-events: auto;
  }

  .custom-header .header-inner {
    background: transparent;
  }

  .custom-header svg,
  .custom-header .icon,
  .custom-header .custom-header-link {
    color: #fff;
  }
</style>