 .dog-img {
   width: 100%;
   height: auto;
   position: absolute;
   top: 0;
   left: 0;
   transition: opacity 0.3s ease;
   pointer-events: none; 
 }
 
 .dog-img.front {
   opacity: 0;
   z-index: 2;
 }
 
 .dog-size-item:hover .front {
