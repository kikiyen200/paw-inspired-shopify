<!-- Video + Carousel -->
<section class="video-carousel-section">
    <!-- 背景影片 -->
    <div class="video-bg">
      <iframe
        src="https://www.youtube.com/embed/WydlKWQ6HxM?autoplay=1&mute=1&loop=1&controls=0&playlist=WydlKWQ6HxM&modestbranding=1&rel=0&iv_load_policy=3"
        frameborder="0"
        allow="autoplay; encrypted-media"
        allowfullscreen
      ></iframe>
    </div>
  
    <div class="product-carousel">
      <!-- 左箭頭 -->
      <button class="carousel-arrow prev">&lt;</button>
  
      <!-- 卡片滾動區 -->
      <div class="carousel-track">
        <!-- 卡片 1 -->
        <div class="product-card">
          <a href="/products/designer-dog-pads" class="card-link">
            <img
              class="main"
              src="https://cdn.shopify.com/s/files/1/0611/7992/0584/files/washable-designer-dog-pad-persian-pawinspired.jpg?v=1746162730"
              alt="Designer Dog Pads"
            />
            <img
              class="pattern"
              src="https://cdn.shopify.com/s/files/1/0611/7992/0584/files/washable-designer-dog-pad-persian-pattern-pawinspired.jpg?v=1746167943"
              alt="Pattern 1"
            />
            <div class="info">
              <div class="title">Designer Dog Pads</div>
              <div class="price">$35.99</div>
            </div>
          </a>
          <button class="add-to-cart" aria-label="Add to cart">
            {% render 'icon-bag' %}
          </button>
        </div>
  
        <!-- 卡片 2 -->
        <div class="product-card">
          <a href="/products/crate-mats" class="card-link">
            <img
              class="main"
              src="https://cdn.shopify.com/s/files/1/0611/7992/0584/files/washable-crate-mat-darkgray-pawinspired.jpg?v=1746163247"
              alt="Crate Mats"
            />
            <img
              class="pattern"
              src="https://cdn.shopify.com/s/files/1/0611/7992/0584/files/washable-crate-mat-pattern-pawinspired.jpg?v=1746167943"
              alt="Pattern 1"
            />
            <div class="info">
              <div class="title">Crate Mats</div>
              <div class="price">$21.99</div>
            </div>
          </a>
          <button class="add-to-cart" aria-label="Add to cart">
            {% render 'icon-bag' %}
          </button>
        </div>
  
        <!-- …更多卡片… -->
      </div> <!-- /.carousel-track -->
  
      <!-- 右箭頭 -->
      <button class="carousel-arrow next">&gt;</button>
    </div> <!-- /.product-carousel -->
  </section>
  
  {% schema %}
  {
    "name": "Video Carousel",
    "settings": [],
    "presets": [{ "name": "Video Carousel" }]
  }
  {% endschema %}
  