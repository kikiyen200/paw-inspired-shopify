{% schema %}
{
  "name": "Hero with Logo Overlay",
  "tag": "section",
  "class": "section-hero-logo-overlay",
  "settings": [
    {
      "type": "url",
      "id": "background_video_url",
      "label": "Background video URL"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo image (white)"
    },
    {
      "type": "text",
      "id": "slogan",
      "label": "Slogan text",
      "default": "Together Let’s Brighten Their Lives®"
    },
    {
      "type": "range",
      "id": "delay",
      "label": "Logo display duration (seconds)",
      "default": 2,
      "min": 1,
      "max": 10,
      "step": 1
    }
  ],
  "presets": [
    {
      "name": "Hero with Logo Overlay"
    }
  ]
}
{% endschema %}

<div class="hero-logo-overlay-wrapper" data-delay="{{ section.settings.delay }}">
  <div class="video-wrapper">
    <video class="hero-video" autoplay muted loop playsinline>
      <source src="{{ section.settings.background_video_url }}" type="video/mp4">
    </video>

    <div class="hero-overlay" id="heroLogoOverlay">
      <img class="splash-logo" src="{{ section.settings.logo_image | image_url }}" alt="Logo">
    </div>
    
    <div class="hero-content-scroll">
      <p class="splash-slogan" style="animation-delay: {{ section.settings.delay | plus: 1.5 }}s">
        {{ section.settings.slogan }}
      </p>
      <a class="cta-button" 
         style="animation-delay: {{ section.settings.delay | plus: 2 }}s">
         Shop What They Need
      </a>
     <div class="scroll-down-indicator" 
          style="animation-delay: {{ section.settings.delay | plus: 2.5 }}s">
       <svg xmlns="http://www.w3.org/2000/svg" 
            width="24" height="24" viewBox="0 0 24 24" 
            fill="none" stroke="currentColor" stroke-width="2" 
            stroke-linecap="butt" stroke-linejoin="butt" 
            class="chevrons-icon">
         <path d="m7 6 5 5 5-5"/><path d="m7 13 5 5 5-5"/>
       </svg>
     </div>
    </div>
  </div>
</div>

{% stylesheet %}
  
/* background container: video+hero-logo-overlay */
.hero-logo-overlay-wrapper {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.video-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
}

.hero-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}
  
/* Logo animation: initial */
.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  pointer-events: none;
}
  
/* Mobile */
@media (max-width: 767px) {
  .splash-logo {
    animation-name: shrinkLogoToFixedMobile !important;
  }

  @keyframes shrinkLogoToFixedMobile {
    0% {
      top: 50%;
      transform: translate(-50%, -50%) scale(1);
    }
    100% {
      top: 2rem;
      transform: translateX(-50%) scale(0.35); 
    }
  }
}
  
/* Slogan, CTA */
.hero-content-scroll {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, 0); 
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 3rem;
  z-index: 10;
  text-align: center;
}

.hero-content-scroll .splash-slogan {
  font-size: 6.5rem;
  color: white;
  font-weight: 600;
  opacity: 0;
  animation: fadeInSlogan 0.5s ease 1.2s forwards;
  animation-fill-mode: forwards;
}

.hero-content-scroll .cta-button {
  background: none;
  color: #fff;
  font-weight: 600;
  text-transform: uppercase;
  font-size: 2.2rem;
  text-decoration: underline;
  opacity: 0;
  animation: fadeInSlogan 1s ease 3s forwards;
  animation-fill-mode: forwards;
}
  
/* scrolled, logo-staged */
body.no-header .shopify-section-header {
  display: none;
}
  
@media (max-width: 767px) {
  .hero-content-scroll .splash-slogan {
    font-size: 3.6rem; 
    line-height: 1.2;
  }
      .splash-logo {
    animation: shrinkLogoToFixedMobile 2s ease forwards;
    animation-delay: 2s;
  }
     .hero-logo-overlay-wrapper {
    height: 65vh;
  }

  .hero-video {
    height: 100%;
  }
 .hero-content-scroll {
    top: 75%; 
  }
}
  
@keyframes fadeInSlogan {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

/* double-arrows  */
.scroll-down-indicator {
  margin-top: 1rem;
  text-align: center;
  animation: fadeInUp 1s ease forwards;
  opacity: 0;
}

.scroll-down-indicator .chevrons-icon {
  width: 32px !important;
  height: auto;
  color: #fff;
  animation: bounceDown 1s infinite;
}
  @keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translateY(10px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}
  @keyframes bounceDown {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(6px);
  }
}

{% endstylesheet %}

<script>
document.addEventListener("DOMContentLoaded", function () {
  if (window.location.pathname !== "/") return;

  const logo = document.querySelector(".splash-logo");
  const delay = 1.5 * 1000;

  document.body.classList.add("no-header");

  logo?.addEventListener("animationend", () => {
    console.log("🌟 Logo Finished");

    const overlay = document.getElementById("heroLogoOverlay");
    if (overlay) overlay.remove();

    const customHeader = document.getElementById("customHeaderWrapper");
    if (customHeader) {
      customHeader.classList.remove("hidden");
      customHeader.style.display = "block";
    }

    let hasSwitched = false;
    window.addEventListener("scroll", function () {
      if (window.scrollY > 30 && !hasSwitched) {
        hasSwitched = true;

        console.log("⬇️ Slide to let header appear");

        const announcement = document.querySelector(".announcement-bar");
        if (announcement) {
          announcement.classList.remove("hidden");
          announcement.style.display = "block";
        }

        const mainHeader = document.getElementById("scrollHeaderWrapper");
        if (mainHeader) {
          mainHeader.classList.add("show");
        }

        if (customHeader) {
          customHeader.style.display = "none";
        }

        console.log("✅ Switch to header.liquid + announcement-bar");
      }
    });
  });

  setTimeout(() => {
    document.body.classList.remove("no-header");
    document.body.classList.add("show-header");
  }, delay);
});
</script>
